# Production Environment Variables
# Copy this file to .env for local development
# For hosting platforms, set these as environment variables

# REQUIRED: Set a strong secret key for production
SECRET_KEY=your_strong_secret_key_here_change_this_in_production

# Database URL (for hosting platforms with persistent storage)
# Railway: will be set automatically
# Render: sqlite:///var/data/focus_flow.db
DATABASE_URL=sqlite:///instance/focus_flow.db

# Security Configuration
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600

# Environment identifier
ENVIRONMENT=production
FLASK_ENV=production