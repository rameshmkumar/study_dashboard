# Production Environment Variables
# Copy this file to .env and update the values
# CRITICAL: Change SECRET_KEY to a strong random value in production!

# Flask Configuration
SECRET_KEY=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_IN_PRODUCTION_OR_APP_WILL_FAIL
FLASK_ENV=production
FLASK_DEBUG=False
ENVIRONMENT=production

# Database Configuration (Railway will auto-create SQLite)
DATABASE_URL=sqlite:///focus_flow.db

# Security Settings
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600

# Rate Limiting (Railway uses memory:// by default)
RATELIMIT_STORAGE_URL=memory://

# Logging
LOG_LEVEL=INFO

# Deployment (Railway will set PORT automatically)
PORT=5000